#include <iostream>
#include <fstream>

using namespace std;

void main()
{
    cout << "Content-type: text/html; charset=Windows-1251\n\n";
    ifstream f("index.txt");
    if (f.is_open())
    {
        auto sz = 65536;
        auto buf = new char[sz];
        while (!f.eof())
        {
            f.getline(buf, sz);

            cout << buf;
        }
        delete[] buf;
        f.close();
    }
    else
    {
        cout << "Не удалось отобразить сайт :(";
    }

}