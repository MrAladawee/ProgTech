body {
    font-family: 'Montserrat', 'Arial', sans-serif;

    font-size: 15px;
    line-height: 1.5;
    color: #333;
    margin: 0;
}


*
*:after
*:before {
    box-sizing: border-box;
}

h1, h2, h3, h4, h5, h6{
    margin: 0;
}

a {
    text-decoration: none;
    color: #fff;
}

/* Container */

.container {
    width: 100%; /* Ширина слоя */
    max-width: 1200px;
    margin: 0 auto;
}


/* Header */

.header {
    width: 100%;
    padding-top: 30px;

    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1;
}

.header__inner {
    display: flex;
    justify-content: space-between;
    text-align: center;
}

.header__logo {
    font-weight: bold;
    color: #fff;
    font-size: 22px;
    padding: 4px 20px;

    display: inline-block;
    vertical-align: top;
    border: 3px solid #fff;
}

.header__logo--black {
    font-weight: bold;
    color: #333;
    font-size: 22px;
    padding: 4px 20px;

    display: inline-block;
    vertical-align: top;
    border: 3px solid #333;
}

.header__number {
    font-size: 22px;
    font-weight: 700;
    padding: 4px 20px;
    border: 3px solid #333;
}

.header__number:hover {
    background-color: #333;
    color: #fff;
}

/* Intro */

.intro {
    background: url("../image/index/intro.jpg") center no-repeat;

    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 100vh; /* 100 процентов экрана посетителя */

    background-size: cover;
}

.intro__inner {
    margin: 0 auto;
    text-align: center;
    width: 100%;
    max-width: 880px;
}

.intro__suptitle {

    font-style: italic;

    font-size: 30px;
    margin: 0 auto;
    color: #fff;
    font-weight: 300;
}

.intro__title {
    color: #fff;
    font-size: 52px;
    font-weight: 700;
}

