/* Menu */

.menu {
    width: 100%;
    padding: 80px 0;
}

.menu__header {
    width: 100%;
    max-width: 950px;

    margin: 0 auto 50px;
    text-align: center;
}

.menu__suptitle {
    font-size: 18px;
    color: #333;
}

.menu__title {
    font-size: 24px;
    font-weight: 700;
    color: #333;
    text-transform: uppercase;
}

.menu__title:after {
    display: block;
    content: "";

    height: 3px;
    width: 80px;
    background-color: #f38181;
    margin: 40px auto;
}

.menu__text {
    color: #333;
}

.menu-tasks {
    padding-top: 30px;
    width: 100%;
    height: 100vh;
    background: url("../../assets/image/tasks/tasks.jpg") center;

    background-size: cover;
}

/* About */

.about {
    margin-top: 80px;
    display: flex;
    justify-content: space-between;
}

.about__item {
    width: 380px;
    position: relative;

    background-color: #95e1d3;
}

.about__item:hover .about__image {
    transform: translate3d(-10px,-10px,0);
}

.about__item:hover .about__image img {
    opacity: .1;
}

.about__item:hover .about__text {
    opacity: 1;
}

.about__image {
    background: linear-gradient(to bottom, #f38181, #fce38a);

    transition: transform .2s linear;
}

.about__image img {
    display: block;
    transition: opacity .1s linear;
}

.about__text {
    width: 100%;
    color: #fff;
    font-size: 18px;
    font-weight: 700;
    text-transform: uppercase;
    text-align: center;
    opacity: 0;

    position: absolute;

    top:50%;
    left: 0;
    z-index: 2;

    transform: translate3d(-13px, -20px, 0);
    transition: opacity .2s linear;
}

/* Footer */

.footer {
    width: 100%;

    background-color: #333;
}

.footer__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.footer__item {
    color: #fff;
    padding: 15px 0;
}

/* Work */


.work {
    background: url("../../assets/image/tasks/tasks.jpg") center no-repeat;
    width: 100%;
    height: 100vh; /* 100 процентов экрана посетителя */

    background-size: cover;

    position: relative;
}

.work__sheet {
    padding-top: 120px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
}

.work_item {
    width: 50%;
    border: 3px solid #333;
    margin: 0 10px;
    padding: 10px;
}

/* Tasks */

.tasks {
    padding-top: 70px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.tasks__item {
    margin-bottom: 70px;
    width: 380px;
    position: relative;
    background-color: #95e1d3;
}

.tasks__item:hover .tasks__image {
    transform: translate3d(-10px,-10px,0);
}

.tasks__item:hover .tasks__image img {
    opacity: .1;
}

.tasks__item:hover .tasks__text {
    opacity: 1;
}

.tasks__image {
    background: linear-gradient(to bottom, #696969, #d5d5d5);

    transition: transform .2s linear;
}

.tasks__image img {
    display: block;
    transition: opacity .1s linear;
}

.tasks__text {
    width: 100%;
    color: #fff;
    font-size: 18px;
    font-weight: 700;
    text-transform: uppercase;
    text-align: center;
    opacity: 0;

    position: absolute;

    top:50%;
    left: 0;
    z-index: 2;

    transform: translate3d(-13px, -20px, 0);
    transition: opacity .2s linear;
}

/* Button */

.btn {
    display: inline-block;
    vertical-align: top;
    padding: 8px 40px;

    border: 3px solid #333;

    font-size: 14px;
    font-weight: 700;
    color: #333;
    text-transform: uppercase;
    text-decoration: none;

    transition: background .1s linear, color .1s linear;
}

.btn:hover {
    background-color: #333;
    color: #fff;
}






























